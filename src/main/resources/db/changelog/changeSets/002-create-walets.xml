<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="002" author="achraf">
        <createTable tableName="wallets">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" unique="true" foreignKeyName="fk_wallet_user" references="users(id)"/>
            </column>
            <column name="balance" type="DECIMAL(19, 2)" defaultValueNumeric="0.00"/>
            <column name="frozen_amount" type="DECIMAL(19, 2)" defaultValueNumeric="0.00"/>
            <column name="commission_debt" type="DECIMAL(19, 2)" defaultValueNumeric="0.00"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>