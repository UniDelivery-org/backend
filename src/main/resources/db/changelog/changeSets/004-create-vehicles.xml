<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="004" author="achraf">
        <createTable tableName="vehicles">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_vehicle_user" references="users(id)"/>
            </column>
            <column name="type" type="VARCHAR(50)"/>
            <column name="model" type="VARCHAR(100)"/>
            <column name="plate_number" type="VARCHAR(50)"/>
            <column name="color" type="VARCHAR(50)"/>
            <column name="verification_status" type="VARCHAR(50)"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>