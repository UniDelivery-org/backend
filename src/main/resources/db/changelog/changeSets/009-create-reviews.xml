<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="009" author="achraf">
        <createTable tableName="reviews">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="delivery_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_review_delivery" references="deliveries(id)"/>
            </column>
            <column name="courier_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_review_courier" references="users(id)"/>
            </column>
            <column name="rating" type="INT"/>
            <column name="comment" type="VARCHAR(500)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>