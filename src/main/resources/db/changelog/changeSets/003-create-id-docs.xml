<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003" author="achraf">
        <createTable tableName="identity_documents">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_identity_user" references="users(id)"/>
            </column>
            <column name="type" type="VARCHAR(50)"/>
            <column name="document_number" type="VARCHAR(100)"/>
            <column name="file_url" type="VARCHAR(500)"/>
            <column name="verification_status" type="VARCHAR(50)"/>
            <column name="rejection_reason" type="VARCHAR(255)"/>
            <column name="expiry_date" type="TIMESTAMP"/>
            <column name="submitted_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>